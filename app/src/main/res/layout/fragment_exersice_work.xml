<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.WorkFragment.ExersiceWorkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <TextView
                android:id="@+id/textNameOfExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Становая тяга"
                android:layout_gravity="center"
                android:textSize="25dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дата"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/editTextData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textFirstRep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/First_rep"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewKg1"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kg"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textViewCount1"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/count"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextFirstRepKg"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/editTextFirstRepCount"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textSecondRepRep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Second_rep"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewKg2"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kg"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textViewCount2"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/count"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextSecondRepKg"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/editTextSecondRepCount"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textThirdRepRep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Third_rep"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewKg3"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kg"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textViewCount3"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/count"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextThirdRepKg"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/editTextThirdRepCount"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textFourthRepRep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Fourth_rep"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewKg4"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kg"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textViewCount4"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/count"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextFourthRepKg"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/editTextFourthRepCount"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>







            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                android:layout_width="147dp"
                android:layout_height="100dp"
                android:text="@string/save"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_cardwiew"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonGetStats"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:text="@string/stats"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_cardwiew"/>

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cardwiew"
                android:text="@string/back"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>